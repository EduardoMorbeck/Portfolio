<section class="about section" id="about">
  <div class="diagonal-bg"></div>
  <div class="about-img animate-on-scroll">
    <img src="/img/code-typing-animate.svg" alt="" />
  </div>

  <div class="about-content">
    <h2 class="heading animate-on-scroll" data-i18n="aboutMe"></h2>
    <p class="about-description animate-on-scroll" data-i18n="aboutText"></p>

    <div class="about-cards">
      <div class="about-card tech-card animate-on-scroll">
        <div class="card-header">
          <i class="fa-solid fa-code"></i>
          <h3 data-i18n="tools"></h3>
        </div>
        <div class="tech-categories">
          <div class="tech-category">
            <div class="category-label">
              <i class="fa-solid fa-laptop-code"></i>
              <strong data-i18n="linguages"></strong>
            </div>
            <div class="tech-badges">
              <span class="tech-badge">JavaScript</span>
              <span class="tech-badge">Java</span>
              <span class="tech-badge">Python</span>
              <span class="tech-badge">SQL</span>
            </div>
          </div>
          <div class="tech-category">
            <div class="category-label">
              <i class="fa-solid fa-layer-group"></i>
              <strong>Frameworks</strong>
            </div>
            <div class="tech-badges">
              <span class="tech-badge">Astro</span>
              <span class="tech-badge">Vue.js</span>
            </div>
          </div>
          <div class="tech-category">
            <div class="category-label">
              <i class="fa-solid fa-database"></i>
              <strong data-i18n="dataBase"></strong>
            </div>
            <div class="tech-badges">
              <span class="tech-badge">MySQL</span>
              <span class="tech-badge">PostgreSQL</span>
            </div>
          </div>
          <div class="tech-category">
            <div class="category-label">
              <i class="fa-brands fa-git-alt"></i>
              <strong data-i18n="versionControl"></strong>
            </div>
            <div class="tech-badges">
              <span class="tech-badge">Git</span>
              <span class="tech-badge">GitHub</span>
            </div>
          </div>
          <div class="tech-category">
            <div class="category-label">
              <i class="fa-brands fa-ubuntu"></i>
              <strong data-i18n="operatingSystem"></strong>
            </div>
            <div class="tech-badges">
              <span class="tech-badge">Ubuntu</span>
            </div>
          </div>
        </div>
      </div>

      <div class="about-card tech-card animate-on-scroll">
        <div class="card-header">
          <i class="fa-solid fa-briefcase"></i>
          <h3 data-i18n="experience"></h3>
        </div>
        <div class="tech-categories">
          <div class="tech-category">
            <div class="category-label">
              <i class="fa-solid fa-building"></i>
              <strong class="experienceTitle" data-i18n="experienceTitle"
              ></strong>
            </div>
            <ul class="experience-list" data-i18n="experienceList"></ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
